{% extends 'layout.html.twig' %}

{% block content %}
    <!--Panel-->

        <!--Section: Blog v.3-->
        <section class="py-4">


            <div class="modal fade" id="subscribenewsletter" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-notify modal-warning" role="document">
                    <!--Content-->
                    <div class="modal-content">
                        <!--Header-->
                        <div class="modal-header text-center">
                            <h4 class="modal-title white-text w-100 font-bold py-2">Inscription Ã  la newsletter</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true" class="white-text">&times;</span>
                            </button>
                        </div>

                        <!--Body-->
                        <div class="modal-body">

                            <div class="md-form">
                                <i class="fa fa-envelope prefix grey-text"></i>
                                <input type="email" id="form2" class="form-control validate">
                                <label data-error="wrong" data-success="right" for="form2">Votre email</label>
                            </div>
                        </div>

                        <!--Footer-->
                        <div class="modal-footer justify-content-center">
                            <a type="button" class="btn btn-outline-secondary-modal waves-effect">S'inscrire <i class="fa fa-paper-plane-o ml-1"></i></a>
                        </div>
                    </div>
                    <!--/.Content-->
                </div>
            </div>

            <div>
                <button type="button" class="btn btn-brown" data-toggle="modal" data-target="#subscribenewsletter">NEWSLETTER</button>
            </div>

            <h2 class="h1 text-center mb-5">{{ actualite.actualiteTitle  }}</h2>
            {{ actualite.actualiteCategory }}  {{ actualite.actualiteDate |date("d/m/Y")  }}
            <!--Section description-->

            <img src="{{ asset('uploads/actualityImg/' ~ actualite.actualiteImages) }}" class="img-fluid" alt="Responsive image">

            <p class="grey-text">{{ actualite.actualiteArticle |raw  }}</p>




            <a class="icons-sm fb-ic"><i class="fa fa-facebook"> </i></a>
            <a class="icons-sm email-ic"><i class="fa fa-envelope-o"> </i></a>
            <a class="icons-sm "><i class="fa fa-share" aria-hidden="true"></i></a>


        </section>
        <!--Section: Blog v.3-->

{% endblock %}
