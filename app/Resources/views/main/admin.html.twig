{% extends 'layout.html.twig' %}

{% block content %}

    <h1>Page Admin</h1>

    <p>Bienvenue {{ app.user.username }}</p><br/>

    <p> <a href="{{ path('fos_user_security_logout') }}">Se Déconnecter</a></p>

    <!-- dashboard administrateur -->
    {% if is_granted('ROLE_ADMIN')%}
        <div class="row">
            <!-- Déposer une observation-->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-plus fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">Déposer une observation</div>
                            </div>
                        </div>
                    </div>

                        <div class="panel-footer">
                            <span class="pull-left">Voir</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>

                </div>
            </div>
            <!-- Nouvelles observations-->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green-clair">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-binoculars fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge" style="color: #004d40"></div>
                                <div style="font-size: 20px;font-weight: 600">Nouvelles observations</div>
                            </div>
                        </div>
                    </div>

                        <div class="panel-footer">
                            <span class="pull-left" style="color: #2b2b2b">Voir</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>

                </div>
            </div>
            <!-- Mes observations-->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-eye fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">Mes observations</div>
                            </div>
                        </div>
                    </div>

                        <div class="panel-footer">
                            <span class="pull-left">Plus de détails</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>

                </div>
            </div>
            <!-- Mes observations en attente-->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green-clair">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-eye fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge"></div>
                                <div style="font-size: 20px;font-weight: 600">Mes observations en attente</div>
                            </div>
                        </div>
                    </div>

                        <div class="panel-footer">
                            <span class="pull-left">Plus de détails</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>

                </div>
            </div>
            <!-- Mes validations -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-check-circle fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge" style="font-size: 20px;font-weight: 600">Mes validations</div>
                            </div>
                        </div>
                    </div>

                        <div class="panel-footer">
                            <span class="pull-left">Voir</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>

                </div>
            </div>
            <!-- Gestions des utilisateurs -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green-clair">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-group fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">Gestions des utilisateurs</div>
                            </div>
                        </div>
                    </div>

                        <div class="panel-footer">
                            <span class="pull-left">Voir</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>

                </div>
            </div>
            <!-- Mise à jour de la base Taxref -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-refresh fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge" style="font-size: 20px;font-weight: 600">Mise à jour de la base Taxref</div>
                            </div>
                        </div>
                    </div>

                        <div class="panel-footer">
                            <span class="pull-left">Mettre à Jour</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>

                </div>
            </div>

        </div>
    {% endif %}
    <!-- /.END dashboard super-admin -->

{% endblock %}