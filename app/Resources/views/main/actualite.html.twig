{% extends 'layout.html.twig' %}

{% block content %}
    <!--Panel-->
    <div class="card card-body">
        <!--Section: Blog v.3-->
        <section class="py-4">

            <!--Section heading-->
            <h2 class="h1 text-center mb-5">LES ACTUALITÃ‰S DE NAO</h2>
            <!--Section description-->

            {% for actualite in actualite %}
            <!--Grid row-->
            <div class="row">

                <!--Grid column-->
                <div class="col-lg-5 col-xl-4 mb-4">
                    <!--Featured image-->
                    <div class="view overlay hm-white-slight rounded z-depth-1-half">
                        <img src="{{ asset('uploads/actualityImg/' ~ actualite.actualiteImages) }}" class="img-fluid" >
                        <a>
                            <div class="mask"></div>
                        </a>
                    </div>
                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-lg-7 col-xl-7 ml-xl-4 mb-4">
                    <h3 class="mb-3 font-bold dark-grey-text">
                        <strong>{{ actualite.actualiteTitle  }}</strong>
                    </h3>
                    <p>{{ actualite.actualiteDate |date("d/m/Y")  }}, {{ actualite.actualiteCategory }} </p>


                    <p class="grey-text">{{ actualite.actualiteArticle |raw  }}</p>

                    <a class="btn btn-primary btn-md pull-right" href="{{ path('actualite_article_view', { 'id': actualite.id }) }}">Lire l'article</a>
                </div>
                <!--Grid column-->

            </div>
            <!--Grid row-->

            <hr class="mb-5">
            {% endfor %}


        </section>
        <!--Section: Blog v.3-->

    </div>
    <!--/.Panel-->
{% endblock %}
